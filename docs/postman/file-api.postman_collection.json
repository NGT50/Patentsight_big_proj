{
  "info": {
    "name": "FileAttachment API",
    "_postman_id": "11111111-2222-3333-4444-555555555555",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "patentId", "value": "" }
  ],
  "item": [
    {
      "name": "Upload file",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/files",
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "/path/to/file.jpg" },
            { "key": "patentId", "type": "text", "value": "{{patentId}}" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('fileId', json.fileId);"
            ]
          }
        }
      ]
    },
    {
      "name": "Update file",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/files/{{fileId}}",
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "/path/to/newfile.jpg" }
          ]
        }
      }
    },
    {
      "name": "Get file metadata",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/files/{{fileId}}"
      }
    },
    {
      "name": "Delete file",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/files/{{fileId}}"
      }
    }
  ]
}
